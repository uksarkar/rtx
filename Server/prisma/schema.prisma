// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  @@map("users")
  id Int @id @default(autoincrement())
  firstname String
  lastname String
  address String?
  posts Post[]
}

model Post {
  @@map("posts")
  id Int @id @default(autoincrement())
  title String
  description String
  user_id Int
  user User @relation(fields: [user_id], references: [id])
}